
<table>
  <tr>
    <th>Pet Name</th>
    <th>Customer Name</th>
    <th>Doctor Name</th>
    <th>Date of visit</th>
    <th>Reminder</th>
    <th>Reason</th>
  </tr>

  <% @appointments.each do |appointment| %>
  	<tr>
	    <td><%= appointment.pet %></td>
	    <td><%= appointment.customer_name %></td>
      <td><%= appointment.doctor_name %></td>
	    <td><%= appointment.visit_date.strftime("%D %H:%M:%S") %></td>
	    <td><%= appointment.send_reminder %></td>
	    <td><%= appointment.reason %></td>
	    <td><%= link_to 'edit', edit_appointment_path(appointment.id) %></td>
  	</tr>
  <% end %>

  <%= link_to "Add", new_appointment_path()%>
</table>
